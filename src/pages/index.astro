---
import { $userData } from "@/utils/stores";
import Layout from "../layouts/Layout.astro";
// import { FirestoreData } from "@/components/FirestoreData";
// import { IKnow } from "@/components/IKnowWhoYouAre";
import { LogoutButton } from "@/components-custom/LogoutButton";
import { Icon } from "@/components/Icon";
---

<Layout title="Stargazer">
  <!-- <FirestoreData client:only="react" /> -->
  <!-- <FirestoreData client:only="react" /> -->

  <!-- TODO: view transitions for sidebar
    https://docs.astro.build/en/guides/view-transitions/
  -->
  <div class="pl-64">
    <!-- sidebar -->
    <aside class="fixed left-0 top-0 w-64 h-full bg-gray-900 border-r border-gray-800 flex flex-col pb-8">
      <div class="shrink-0 p-4">
        <h3 class="text-lg">Stargazer</h3>
        <p class="text-sm text-gray-500">Welcome</p>
      </div>

      <nav class="flex-1 mt-8 p-2 text-sm flex flex-col">
        <div class="flex-1">
          <a href="/" class="inline-flex w-full py-2 px-2 bg-gray-800 rounded-lg">
            <Icon name="clock" className="size-5 text-gray-400 mt-px mr-2" strokeWidth={2.5} />
            <span>Recents</span>
          </a>
        </div>

        <div class="shrink-0">
          <LogoutButton client:only="react" />
        </div>
      </nav>
    </aside>

    <!-- main content -->
    <main class="p-4">
      <h1 class="text-lg">Recents</h1>
    </main>
  </div>
</Layout>
